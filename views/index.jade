          if (path === "update") {
            $(".content.update").html("");
            $.getJSON("/storage/tags.json", function(data){
            $.getJSON("/storage/images.json", function(data2){
              for(key in data){
                var tag_name = data[key];
                console.log(tag_name);
                if (tag_name.length < 1){
                  tag_name = "タグなし"
                }
                
                $(".content.update").append('<div class="box result no-tag"><p style="margin-top: 0px;">#'+ tag_name +'</p><img src="http://localhost:3000/uploads/'+ key +'"><p>'+data2[key].join("")+'</p></div>');
              }
            });
            });  
          }
          $(".content."+path).fadeIn();
        });
